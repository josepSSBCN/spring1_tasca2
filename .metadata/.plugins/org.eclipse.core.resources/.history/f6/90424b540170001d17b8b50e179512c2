package MainPackage;


public class Main {

	public static void main(String[] args) {
		Entrada myEntrada = new Entrada();
		Byte numByte;
		int numInt;
		float numFloat;
		
		// MÈTODE BYTE
		numByte = myEntrada.llegirByte("Introdueix un byte");
		System.out.println("El número: " + numByte + ", te el format correcte de 'byte'");
		
		// MÈTODE CONTROL INT
		numInt = myEntrada.llegirInt("Introdueix un número amb el format 'int'");
		System.out.println("El número: " + numInt + ", te el format correcte de 'int'");

		// MÈTODE FLOAT
		numFloat = myEntrada.llegirInt("Introdueix un número amb el format 'float'");
		System.out.println("El número: " + numInt + ", te el format correcte de 'float'");

		
	}

}
